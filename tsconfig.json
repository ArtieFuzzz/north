{
	"compilerOptions": {
		"experimentalDecorators": true,
		"outDir": "./build",
		"allowJs": false,
		"declaration": false,
		"baseUrl": "src",
		"target": "ESNext",
		"lib": ["ESNext"],
		"module": "CommonJS",
		"removeComments": true,
		"alwaysStrict": true,
		"strictNullChecks": false,
		"composite": false,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*.ts"],
	"files": ["src/lib/client.d.ts"]
}